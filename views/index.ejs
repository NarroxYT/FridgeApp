<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Fridge Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
</head>
<body>
    <!-- 🎯 Sidebar -->
    <div class="sidebar" id="sidebar">
        <button class="btn btn-light toggle-btn" id="sidebarToggle">☰</button>
        <div class="sidebar-content">
            <button class="btn btn-primary mb-3" id="adminBtn">Admin Portal</button>
            <button class="btn btn-info" id="infoBtn">Information</button>
        </div>
    </div>

    <!-- 📱 Main Content -->
    <div class="main-content">
        <div class="container">
            <h1 class="text-center mb-4">🥤 Fridge Drinks</h1>
            <div class="row" id="drinksContainer">
                <!-- Drinks will be dynamically loaded here -->
            </div>
        </div>
    </div>

    <!-- 🔢 Count Modal -->
    <div class="modal fade" id="countModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">How many drinks?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-center align-items-center">
                        <button class="btn btn-lg btn-outline-primary me-2" id="decreaseCount">-</button>
                        <span class="fs-2" id="drinkCount">1</span>
                        <button class="btn btn-lg btn-outline-primary ms-2" id="increaseCount">+</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="confirmCount">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!-- 👤 User Selection Modal -->
    <div class="modal fade" id="userModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Select User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="list-group" id="userList">
                        <!-- Users will be dynamically loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ℹ️ Info Modal -->
    <div class="modal fade" id="infoModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">User Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="userInfo">
                        <!-- User info will be dynamically loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/main.js"></script>
</body>
</html>
